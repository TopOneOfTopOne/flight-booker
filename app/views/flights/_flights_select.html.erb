<table class="flights_select" style="border: 1px solid black">
  <% if @flights.empty? %>
      <p> No results found! </p>
  <% else %>
    <tr>
      <th>Select</th>
      <th>Departure</th>
      <th>To</th>
      <th>From</th>
      <th>Duration</th>
    </tr>
    <%= form_for :flight_select do |f| %>
      <% @flights.each do |flight| %>
        <tr style="border: 1px solid black">
          <td><%= f.radio_button(:flight, flight.id) %></td>
          <td><%= flight.start_datetime %></td>
          <td><%= Airport.find(flight.to_airport_id).code %></td>
          <td><%= Airport.find(flight.from_airport_id).code %></td>
          <td><%= distance_of_time_in_words(flight.flight_duration) %></td>
        </tr>
      <% end %>
     <% end %>
  <% end %>
</table>